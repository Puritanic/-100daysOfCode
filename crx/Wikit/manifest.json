{
    "manifest_version": 2,
    "name": "Wikit",
    "version": "0.0.1",
    "description": "A Wikipedia Searcher",

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": ["eventpage.js"],
        "persistent": false
    },
    "permissions": [
        "tabs", 
        "contextMenus"
    ]
}