{
    "manifest_version": 2,
    "name": " Budget Manager",
    "version": "0.2",
    "description": "A simple budget manager extension",

    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },

    "browser_action": {
        "default_icon": "icons/icon16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["eventpage.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]

}