{
    "manifest_version": 2,

    "name": "Pluralsight Course Helper",
    "description": "Add functionality to Pluralsight website",
    "version": "1.0",

    "page_action": {
        "default_icon": "icon.png",
        "default_title": "Pluralsight helper",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "permissions": [
        "tabs"
    ]
}